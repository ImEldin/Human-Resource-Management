<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Files</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
</head>
<body>
<div class="container my-4">
    <div class="row mb-3 align-items-center">
        <div class="col">
            <h4 class="text-primary">User Files</h4>
        </div>
        <div class="col-auto text-end">
            <a href="/admin-welcome/all-applications/<%= applicationId %>/user/<%= userId %>" class="btn btn-danger">
                <i class="bi bi-arrow-left-circle-fill"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <% if (files.length > 0) { %>
                <% files.forEach(file => { %>
                    <div class="row align-items-center py-2 border-bottom">
                        <div class="col-md-8">
                            <span class="text-dark"><%= file.original_name %></span>
                        </div>
                        <div class="col-md-4 text-end">
                            <form action="/user-welcome/profile/files/delete/<%= file.id %>" method="POST" class="d-inline">
                                <a id="download" href="/admin-welcome/all-applications/<%= applicationId %>/user/<%= userId %>/files/download/<%= file.id %>" class="btn btn-primary btn-sm me-2">
                                    <i class="bi bi-download"></i> Download
                                </a>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="text-center py-5">
                    <p class="text-muted">User did not add any files.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>
