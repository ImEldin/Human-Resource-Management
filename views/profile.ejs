<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/profile.css">
<body>
<div class="grid-container">
    <div class="item-1">
        <div class="container user-info">
            <h4>General </h4>
            <div class="row">
                <div class="col user-info-l">Name :</div>
                <div class="col user-info-r"><%= user.name %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Surname :</div>
                <div class="col user-info-r"><%= user.surname %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">ID :</div>
                <div class="col user-info-r"><%= user.idnumber %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Date of birth :</div>
                <div class="col user-info-r"><%= user.dateofbirth %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Contact :</div>
                <div class="col user-info-r"><%= user.phone %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Gender :</div>
                <div class="col user-info-r"><%= user.gender %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Address :</div>
                <div class="col user-info-r"><%= user.address %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Municipality :</div>
                <div class="col user-info-r"><%= user.municiplality %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">City :</div>
                <div class="col user-info-r"><%= user.city %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Country :</div>
                <div class="col user-info-r"><%= user.country %></div>
            </div>
            <div class="row">
                <div class="col user-info-r-1"><h6>Back to main page</h6></div>
                <div class="col user-info-l-1"><a href="/user-welcome"><i class="bi bi-arrow-left-circle-fill icon"></i></a></div>
            </div>
        </div>
    </div>
    <div class="item-2">
        <div class="container user-info">
            <h4>User info</h4>
            <div class="row">
                <div class="col user-info-l">Username :</div>
                <div class="col user-info-r"><%= userInfo.username %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Email :</div>
                <div class="col user-info-r"><%= userInfo.email %></div>
            </div>
        </div>
    </div>
    <div class="item-3">
        <div class="container user-info">
            <h4>Education</h4>
            <div class="row">
                <div class="col user-info-l">Primary school :</div>
                <div class="col user-info-r"><%= education.primary_school %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">Middle school :</div>
                <div class="col user-info-r"><%= education.middle_school %></div>
            </div>
            <div class="row">
                <div class="col user-info-l">College :</div>
                <div class="col user-info-r"><%= education.collage %></div>
            </div>
        </div>
    </div>
    <div class="item-4">
        <div class="container user-info">
            <h4> Your files </h4>
            <div class="row option">
                <div class="col col-txt"><p>View your files</p></div>
                <div class="col col-button"><a href="/user-welcome/profile/files"><i class="bi bi-card-text icon"></i></a></div>
            </div>
        </div>
    </div>
    <div class="item-5">
        <div class="container user-info">
            <h4>Skills</h4>

            <% if (skills.length > 0) { %>
                <% skills.forEach(skill => { %>
                    <div class="row">
                        <div class="col user-info-r-1"><%= skill.skill %></div>
                        <div class="col user-info-l-1">
                            <form action="/user-welcome/profile/delete-skill/<%= skill.id %>" method="POST">
                                <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="row">
                    <div class="col user-info-r" style="padding:0; padding-top: 19px; padding-left: 10px"><p>No skills added yet.</p></div>
                </div>
            <% } %>
        </div>
    </div>
    <div class="item-6">
        <div class="container user-info">
            <h4>Work</h4>

            <% if (work.length > 0) { %>
                <% work.forEach(work => { %>
                    <div class="row">
                        <div class="col user-info-r-1"><%= work.work %></div>
                        <div class="col user-info-l-1">
                            <form action="/user-welcome/profile/delete-work/<%= work.id %>" method="POST">
                                <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="row">
                    <div class="col user-info-r" style="padding:0; padding-top: 19px; padding-left: 10px"><p>No previous work experience added yet.</p></div>
                </div>
            <% } %>
        </div>
        </div>
    </div>
</body>
</html>
