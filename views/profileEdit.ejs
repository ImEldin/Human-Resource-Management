<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Settings</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
</head>
<body>
<div class="container my-4">
    <div class="row mb-3 align-items-center">
        <div class="col">
            <h3 class="text-primary">Profile Settings</h3>
        </div>
        <div class="col-auto text-end">
            <a href="/user-welcome" class="btn btn-danger">
                <i class="bi bi-arrow-left-circle-fill"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header text-light">
            <h4>Basic Info</h4>
        </div>
        <div class="card-body">
            <form action="/user-welcome/profile/edit-basic" method="POST">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="inputName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="inputName" name="name" value="<%= user.name %>">
                    </div>
                    <div class="col-md-6">
                        <label for="inputSurname" class="form-label">Surname</label>
                        <input type="text" class="form-control" id="inputSurname" name="surname" value="<%= user.surname %>">
                    </div>
                    <div class="col-md-9">
                        <label for="inputID" class="form-label">ID</label>
                        <input type="text" class="form-control" id="inputID" name="id" value="<%= user.idnumber %>">
                    </div>
                    <div class="col-md-3">
                        <label for="inputDate" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" name="dateOfBirth" id="inputDate" value="<%= user.dateofbirth %>">
                    </div>
                    <div class="col-md-6">
                        <label for="inputNumber" class="form-label">Number</label>
                        <input type="text" class="form-control" id="inputNumber" name="number" value="<%= user.phone %>">
                    </div>
                    <div class="col-md-6">
                        <label for="inputGender" class="form-label">Gender</label>
                        <select id="inputGender" class="form-select" name="gender">
                            <option selected>Male</option>
                            <option>Female</option>
                        </select>
                    </div>
                    <div class="col-md-12">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="inputAddress" name="address" value="<%= user.address %>">
                    </div>
                    <div class="col-md-4">
                        <label for="inputMunicipality" class="form-label">Municipality</label>
                        <input type="text" class="form-control" id="inputMunicipality" name="municipality" value="<%= user.municiplality %>">
                    </div>
                    <div class="col-md-4">
                        <label for="inputCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity" name="city" value="<%= user.city %>">
                    </div>
                    <div class="col-md-4">
                        <label for="inputCountry" class="form-label">Country</label>
                        <input type="text" class="form-control" id="inputCountry" name="country" value="<%= user.country %>">
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <button class="btn btn-primary">
                        <i class="bi bi-save-fill"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header text-light">
            <h4>Education</h4>
        </div>
        <div class="card-body">
            <form action="/user-welcome/profile/edit-education" method="POST">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="inputPrimary" class="form-label">Primary School</label>
                        <input type="text" class="form-control" id="inputPrimary" name="primary" value="<%= education.primary_school %>">
                    </div>
                    <div class="col-md-4">
                        <label for="inputMiddle" class="form-label">Middle School</label>
                        <input type="text" class="form-control" id="inputMiddle" name="middle" value="<%= education.middle_school %>">
                    </div>
                    <div class="col-md-4">
                        <label for="inputCollege" class="form-label">College</label>
                        <input type="text" class="form-control" id="inputCollege" name="collage" value="<%= education.collage %>">
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <button class="btn btn-primary">
                        <i class="bi bi-save-fill"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header text-light">
            <h4>Work and Skills</h4>
        </div>
        <div class="card-body">
            <form action="/user-welcome/profile/edit-work-and-skills" method="POST">
                <div class="mb-3">
                    <label for="inputWork" class="form-label">Add Your Work Experience</label>
                    <input type="text" class="form-control" id="inputWork" name="work">
                </div>
                <div class="mb-3">
                    <label for="inputSkill" class="form-label">Add Your Skills</label>
                    <input type="text" class="form-control" id="inputSkill" name="skill">
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary">
                        <i class="bi bi-plus-circle-fill"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header text-light">
            <h4>Upload Your Documents</h4>
        </div>
        <div class="card-body">
            <form action="/user-welcome/profile/upload" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload PDF</label>
                    <input class="form-control" type="file" name="document" id="formFile" required>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary">
                        <i class="bi bi-upload"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
