<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
</head>
<body>
<div class="container my-4">

    <div class="row mb-3 align-items-center">
        <div class="col">
            <h3 class="text-primary">User Profile Details</h3>
        </div>
        <div class="col-auto text-end">
            <a href="/admin-welcome/all-applications/<%= applicationId %>/user/<%= userId %>" class="btn btn-danger">
                <i class="bi bi-arrow-left-circle-fill"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header text-white">
            <h5>General Information</h5>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Name:</div>
                <div class="col-md-9"><%= user.name %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Surname:</div>
                <div class="col-md-9"><%= user.surname %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">ID:</div>
                <div class="col-md-9"><%= user.idnumber %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Date of Birth:</div>
                <div class="col-md-9"><%= user.dateofbirth %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Contact:</div>
                <div class="col-md-9"><%= user.phone %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Gender:</div>
                <div class="col-md-9"><%= user.gender %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Address:</div>
                <div class="col-md-9"><%= user.address %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Municipality:</div>
                <div class="col-md-9"><%= user.municiplality %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">City:</div>
                <div class="col-md-9"><%= user.city %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Country:</div>
                <div class="col-md-9"><%= user.country %></div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header text-white">
            <h5>Education</h5>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Primary School:</div>
                <div class="col-md-9"><%= education.primary_school %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Middle School:</div>
                <div class="col-md-9"><%= education.middle_school %></div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">College:</div>
                <div class="col-md-9"><%= education.collage %></div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header text-white">
            <h5>Skills</h5>
        </div>
        <div class="card-body">
            <% if (skills.length > 0) { %>
                <% skills.forEach(skill => { %>
                    <div class="row mb-2">
                        <div class="col-md-10"><%= skill.skill %></div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-muted">No skills added yet.</p>
            <% } %>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header text-white">
            <h5>Work Experience</h5>
        </div>
        <div class="card-body">
            <% if (work.length > 0) { %>
                <% work.forEach(item => { %>
                    <div class="row mb-2">
                        <div class="col-md-10"><%= item.work %></div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-muted">No previous work experience added yet.</p>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>
