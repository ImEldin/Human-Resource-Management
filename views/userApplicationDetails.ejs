<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Application Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
</head>
<body>
<div class="container my-4">

    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="text-primary">User Application Details</h2>
        </div>
        <div class="col-auto">
            <a href="/admin-welcome/all-applications/<%= applicationId %>" class="btn btn-danger">
                <i class="bi bi-arrow-left-circle-fill"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-white">Application Details</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered  align-middle">
                <thead class="table-light">
                <tr>
                    <th>Field Name</th>
                    <th>User Input</th>
                </tr>
                </thead>
                <tbody>
                <% if (userDetails.length > 0) { %>
                    <% userDetails.forEach(detail => { %>
                        <tr>
                            <td><%= detail.field_name %></td>
                            <td><%= detail.field_value %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="2" class="text-center text-muted">No details found for this application.</td>
                    </tr>
                <% } %>
                </tbody>
            </table>

            <div class="d-flex justify-content-end gap-2">
                <a href="/admin-welcome/all-applications/<%= applicationId %>/user/<%= userId %>/profile" class="btn btn-primary">
                    <i class="bi bi-person-fill"></i> Profile
                </a>
                <a href="/admin-welcome/all-applications/<%= applicationId %>/user/<%= userId %>/files" class="btn btn-secondary">
                    <i class="bi bi-folder-fill"></i> Files
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-white">Uploaded Files</h5>
        </div>
        <div class="card-body">
            <% if (uploadedFiles.length > 0) { %>
                <ul class="list-group">
                    <% uploadedFiles.forEach(file => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-file-earmark-text me-2"></i> <%= file.original_name %></span>
                            <a href="/admin-welcome/all-applications/<%= applicationId %>/user/<%= userId %>/files/download/<%= file.id %>"
                               class="btn btn-primary btn-sm" download>
                                <i class="bi bi-download"></i> Download
                            </a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="text-muted mb-0">No files uploaded for this application.</p>
            <% } %>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
