<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Active Jobs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/application.css">

</head>
<body>
<div class="container my-4">
    <div class="row mb-3 align-items-center">
        <div class="col">
            <h3 class="text-primary">Available Jobs</h3>
        </div>
        <div class="col-auto text-end">
            <a href="/user-welcome" class="btn btn-danger">
                <i class="bi bi-arrow-left-circle-fill"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-5">
                    <input type="text" id="positionFilter" class="form-control" placeholder="Filter by Position">
                </div>
                <div class="col-md-5">
                    <input type="text" id="companyFilter" class="form-control" placeholder="Filter by Company">
                </div>
                <div class="col-md-2 text-end">
                    <button class="btn btn-primary w-100" onclick="applyFilters()">Filter</button>
                </div>
            </div>
        </div>
    </div>

    <div class="list-group">
        <% if (jobs.length > 0) { %>
            <% jobs.forEach(job => { %>
                <a href="/user-welcome/jobs/<%= job.id %>" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1 text-primary"><%= job.job_name %></h5>
                        <small>Closing Date: <%= job.closing_date %></small>
                    </div>
                    <p class="mb-1">Position: <%= job.position %> | Company: <%= job.company %></p>
                </a>
            <% }) %>
        <% } else { %>
            <div class="alert alert-warning text-center" role="alert">
                No jobs available at the moment. Please check back later.
            </div>
        <% } %>
    </div>
</div>

<script>
    function applyFilters() {
        const position = document.getElementById('positionFilter').value;
        const company = document.getElementById('companyFilter').value;
        window.location.href = `/user-welcome/jobs?position=${position}&company=${company}`;
    }
</script>
</body>
</html>
