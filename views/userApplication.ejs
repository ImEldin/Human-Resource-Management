<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Applications</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
</head>
<body>
<div class="container my-4">
    <div class="row mb-3 align-items-center">
        <div class="col">
            <h3 class="text-primary">Your Applications</h3>
        </div>
        <div class="col-auto text-end">
            <a href="/user-welcome" class="btn btn-danger">
                <i class="bi bi-arrow-left-circle-fill"></i> Back
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                <tr>
                    <th>Job Name</th>
                    <th>Position</th>
                    <th>Company</th>
                    <th>Submitted At</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                <% if (applications.length > 0) { %>
                    <% applications.forEach(app => { %>
                        <tr>
                            <td><%= app.job_name %></td>
                            <td><%= app.position %></td>
                            <td><%= app.company %></td>
                            <td><%= app.submitted_at %></td>
                            <td>
                                <span class="badge <%= app.status === 'submitted' ? 'bg-info' : app.status === 'viewed' ? 'bg-warning' : app.status === 'interview' ? 'bg-success' : 'bg-danger' %>">
                                    <%= app.status %>
                                </span>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center text-muted">You have not applied to any jobs yet.</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
